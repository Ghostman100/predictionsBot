<div class="container-decor">
  <div class="history-item">
    <div class="history-table">
      <div class="history-cell">
        <div class="history-h1 text-green">
          <%= params["value"] %> RUB
        </div>
        <div class="history-title text-green">
          Single
        </div>
      </div>
      <div class="history-cell">
        <div class="history-sub-title">
                        <span class="text-red">
                            Odds: <%= params["bet"] %>
                        </span>
          <small class="text-green">Win</small>
          <b>
            <%= (params["value"].to_f * params["bet"].to_f).round(2) %> RUB
          </b>
        </div>
      </div>
    </div>


    <div class="history-title">
      <span class="text-yellow"><%= "#{params["1st_team"]} VS #{params["2nd_team"]}" %></span>
      <span class="text-white"><%= params["map"] %>nd map - winner</span>
      <span class="text-white"><%= params["winner"] %></span>
    </div>

    <div class="box-sub-title">ID: ...<%= @id %></div>
    <br>
    <div class="box-sub-title"><%= @time.strftime("%F") %></div>
    <div class="box-sub-title">
      <svg class="icon-svg icon-alarm">
        <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#alarm"></use>
      </svg>
      <span><%=  @time.strftime("%H:%M (GTM%:z)") %></span>
    </div>
  </div>
</div>
